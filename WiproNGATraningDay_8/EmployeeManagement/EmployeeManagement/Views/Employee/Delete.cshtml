@model EmployeeManagement.Models.Employee

<h2>Delete Employee</h2>
<p>Are you sure you want to delete this employee?</p>

<table border="1">
    <tr>
        <th>ID</th>
        <td>@Model.ID</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Department</th>
        <td>@Model.Dept</td>
    </tr>
</table>

<form method="post">
    <button type="submit">Yes, Delete</button>
    <a href="/Employee/Index">Cancel</a>
</form>
